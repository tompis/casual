<ironjacamar xmlns="http://www.ironjacamar.org/doc/schema"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.ironjacamar.org/doc/schema 
             http://www.ironjacamar.org/doc/schema/ironjacamar_1_1.xsd">

  <transaction-support>XATransaction</transaction-support>
  
  <connection-definitions>
    <connection-definition class-name="se.kodarkatten.casual.connector.CasualManagedConnectionFactory" jndi-name="java:/eis/CasualConnectionFactory" pool-name="CasualConnectionFactory">
      <recovery>
        <recover-credential>
          <user-name>user</user-name>
          <password>password</password>
        </recover-credential>
      </recovery>
    </connection-definition>
  </connection-definitions>

  <admin-objects>
    <admin-object class-name="se.kodarkatten.casual.connector.CasualAdminObjectImpl" jndi-name="java:/eis/ao/CasualAdminObject">
    </admin-object>
  </admin-objects>

</ironjacamar>
